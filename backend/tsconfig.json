{
  "compilerOptions": {
    /* Node.js Backend Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    
    /* Directory Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Types */
    "types": ["node"],

    /* Emit */
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    /* Strict Type Safety */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/express.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
