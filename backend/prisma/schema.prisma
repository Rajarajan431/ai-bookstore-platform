generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user")

  // Books this user has created (seller)
  books     Book[]    @relation("UserBooks")

  // Orders the user has placed (customer)
  orders    Order[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Book {
  id          Int          @id @default(autoincrement())
  title       String
  author      String
  description String?
  price       Float
  stock       Int           @default(1)
  imageUrl    String?

  // Seller (Book creator)
  sellerId    Int
  seller      User         @relation("UserBooks", fields: [sellerId], references: [id])

  // Order items referencing this book
  orderItems  OrderItem[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Order {
  id         Int         @id @default(autoincrement())
  userId     Int
  user       User        @relation(fields: [userId], references: [id])

  total      Float
  status     String       @default("pending") // pending, paid, shipped, completed
  paymentId  String?      // Stripe payment ID

  items      OrderItem[]
  createdAt  DateTime     @default(now())
}

model OrderItem {
  id        Int        @id @default(autoincrement())

  orderId   Int
  order     Order      @relation(fields: [orderId], references: [id])

  bookId    Int
  book      Book       @relation(fields: [bookId], references: [id])

  quantity  Int         @default(1)
  price     Float       // capture book price at time of purchase
}