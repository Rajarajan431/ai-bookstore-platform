generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER")

  // Books user created (seller)
  books     Book[]   @relation("UserBooks")

  // Orders user placed (buyer)
  orders    Order[]  @relation("BuyerOrders")

  // Orders user received (seller)
  sales     OrderItem[] @relation("SellerOrders")

  createdAt DateTime @default(now())
}


model Book {
  id          Int          @id @default(autoincrement())
  title       String
  author      String?
  description String?
  price       Float
  stock       Int           @default(1)
  imageUrl    String?

  // Seller (Book creator)
  sellerId    Int
  seller      User         @relation("UserBooks", fields: [sellerId], references: [id])

  // Order items referencing this book
  orderItems  OrderItem[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Order {
  id         Int         @id @default(autoincrement())

  // Buyer
  buyerId    Int
  buyer      User        @relation("BuyerOrders", fields: [buyerId], references: [id])

  total      Float
  status     OrderStatus @default(PENDING)
  paymentId  String?

  items      OrderItem[]

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model OrderItem {
  id        Int      @id @default(autoincrement())

  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])

  bookId    Int
  book      Book    @relation(fields: [bookId], references: [id])

  // Seller (book owner at purchase time)
  sellerId  Int
  seller    User    @relation("SellerOrders", fields: [sellerId], references: [id])

  quantity  Int      @default(1)
  price     Float    // snapshot price

  status    OrderItemStatus @default(PENDING)

  createdAt DateTime @default(now())
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}

enum OrderItemStatus {
  PENDING
  SHIPPED
}
